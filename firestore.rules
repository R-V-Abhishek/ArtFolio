rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if true; // Allow reading for development/testing
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if true; // Allow creating mock data for development
    }
    
    // Role-specific collections - linked to users (Allow for development)
    match /artists/{artistId} {
      allow read, write: if true; // Allow for development/testing
    }
    
    match /audiences/{audienceId} {
      allow read, write: if true; // Allow for development/testing
    }
    
    match /sponsors/{sponsorId} {
      allow read, write: if true; // Allow for development/testing
    }
    
    match /organisations/{organisationId} {
      allow read, write: if true; // Allow for development/testing
    }
    
    // Posts collection - allow for development/testing
    match /posts/{postId} {
      allow read, write: if true; // Allow for development/testing
    }
    
    // Images collection - for Firestore-based image storage
    match /images/{imageId} {
      allow read: if true; // Allow reading images for public display
      allow write: if true; // Allow for development/testing
      allow create: if true; // Allow image uploads
      allow delete: if true; // Allow image deletion for development/testing
    }
  }
}